{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Backend (Spring Boot)",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "mainClass": "com.kamiokaweb.redo.RedoApplication",
            "projectName": "redo",
            "args": "",
            "envFile": "${workspaceFolder}/.env",
            "vmArgs": "-Dspring.profiles.active=local"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Frontend (Nuxt)",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "dev"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (Backend + Frontend)",
            "configurations": [
                "Backend (Spring Boot)",
                "Frontend (Nuxt)"
            ],
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 1
            },
            "stopAll": true
        }
    ]
}
